{
  "name": "<%= name %>",
  "version": "1.0.0",
  "authors": "<%= author %>",
  "license": "<%= license %>",
  "scripts": {
    "ghpages": "git subtree push --prefix build origin gh-pages",
    "build": "gulp build --production",
    "start": "gulp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "build/**/*.html": [
      "htmlhint --config .htmlhintrc"
    ]
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "class-methods-use-this": "off",
      "no-underscore-dangle": "off",
      "no-param-reassign": "off",
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": {
            "version": 3,
            "proposals": true
          }
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/register": "^7.14.5",
    "ansi-colors": "^4.1.1",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.13",
    "del": "^6.0.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-webpack-plugin": "^2.4.1",
    "fancy-log": "^1.3.3",
    "gulp-changed": "^4.0.3",
    "gulp": "^4.0.2",<% if (sprites.indexOf('sprite-svg') !== -1 || sprites.indexOf('inline-svg') !== -1) { %>
    "gulp-cheerio": "^1.0.0",<% } %><% if (sprites.indexOf('sprite-svg') !== -1) { %>
    "gulp-svgstore": "^7.0.1",<% } %><% if (sprites.indexOf('inline-svg') !== -1) { %>
    "gulp-cheerio-clean-svg": "github:Hiswe/gulp-cheerio-clean-svg",<% } %>
    "gulp-consolidate": "^0.2.0",<% if (multilanguage) { %>
    "gulp-data": "^1.3.1",
    "gulp-jsonlint": "^1.3.2",<% } %>
    "gulp-front-matter": "^1.3.0",
    "gulp-if": "^3.0.0",
    "gulp-notify": "^4.0.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-prettify": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^3.0.0",<% if (sprites.indexOf('png') !== -1) { %>
    "gulp.spritesmith": "^6.11.0",
    "vinyl-buffer": "^1.0.1",<% } %>
    "htmlhint": "^0.15.1",
    "husky": "^4.3.5",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "plugin-error": "^1.0.1",
    "postcss": "^8.3.5",
    "postcss-csso": "^5.0.1",
    "postcss-custom-properties": "^11.0.0",
    "prettier": "2.3.1",
    "require-yml": "^2.0.0",
    "webpack": "^5.39.1",
    "webpack-bundle-analyzer": "^4.2.0",<% if (pwa) { %>
    "workbox-build": "^6.1.5"<% } %>
  },
  "dependencies": {
    "core-js": "^3.14.0",
    "fg-loadcss": "^3.1.0",
    "intersection-observer": "^0.12.0"
  }
}
